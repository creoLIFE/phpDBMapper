class %pMapperPrefix%_Repository_%pClassName%
{
    private $dao;

    /**
    * Method will set DAO
    * @method setDao
    * @return mixed
    */
    public function setDao(%pMapperPrefix%_Dao_%pClassName% $dao){
        $this->dao = $dao;
    }

    /**
    * Method will get DAO
    * @method getDao
    * @return mixed
    */
    public function getDao(){
        if (null === $this->dao) {
            $this->setDao( new %pMapperPrefix%_Dao_%pClassName% );
        }
        return $this->dao;
    }

    /**
    * Method will get row by its ID
    * @method getById
    * @param integer $id = id of the row
    * @return boolean
    */
    public function getById( $id = -1 ){
        //Definition
        $row = array();
        $mapper = new %pMapperPrefix%_Mapper_%pClassName%();

        $validator = new Zend_Validate_Regex(array('pattern' => '/[a-zA-Z0-9\s\-\_]+/'));
        if ($validator->isValid( $id )) {
            $row = $this->getDao()->fetchRow($id);
        }

        $user = $mapper->assign(new %pMapperPrefix%_Entity_%pClassName%(), $row);

        return $user;
    }
}
